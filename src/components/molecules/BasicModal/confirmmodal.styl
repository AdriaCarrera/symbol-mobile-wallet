.modalWrapper {
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20px;
}

.modalOverlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
}

.bottomCard {
  background-color: #f2f4f8;
  min-height: 250px;
    max-height: 50%;
  padding: 15px 0 0;
  flex-direction: row;
  width: 100%;
}

.contentWrapper {
  width: 100%;
  height: 100%;
}

.contentBody {
	paddingTop: 16px;
	flex: 1;
}

.closeButton {
  justify-content: flex-end;
  align-items: flex-start;
  padding: 20px;
  flex-direction: row;
}

.closeIcon {
  width: 18px;
  height: 18px;
}

.titleBar {
	margin-top: 0;
	border-bottom-width: 1px;
	border-bottom-style: solid;
	border-bottom-color: #0001;
}

.titleText {
	text-align: center;
	max-width: 70%;
	flex-wrap: wrap;
}



